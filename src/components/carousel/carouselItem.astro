---
import type { ImageMetadata } from "astro"
import { Image } from "astro:assets"

interface Props {
    src: ImageMetadata;
    alt: string;
    loading?: "eager" | "lazy";
}

const { src, alt, loading } = Astro.props;
---
<div class="flex items-center justify-center w-full">
    <Image src={src} alt={alt} loading={loading ? loading : "eager"}/>
</div>