---
import SocialsItem from "./footer/socialsItem.astro";
import { Image } from "astro:assets";

import xLogo from "../media/images/website/socials/x.svg";
import instaLogo from "../media/images/website/socials/instagram.svg";
import linkedinLogo from "../media/images/website/socials/linkedin.svg";
import youtubeLogo from "../media/images/website/socials/youtube.svg";

import tubitLogo from "../media/images/website/tubit-logo.svg";
import trakyaLogo from "../media/images/website/trakya-logo.svg";
---

<footer class="w-full mt-24 lg:mt-52 py-6 h-96 md:h-72 bg-[#1d1d1d]">
    <div class="flex flex-wrap items-center justify-around">
        <div class="mt-5 mx-9">
            <div class="flex justify-around">
                <SocialsItem
                    href="https://twitter.com/kycubyo_tubit"
                    desc="TÜBİT Twitter sayfasını ziyaret et"
                    src={xLogo}
                    alt="X"
                />
                <SocialsItem
                    href="https://www.instagram.com/tubit.tu/"
                    desc="TÜBİT Instagram sayfasını ziyaret et"
                    src={instaLogo}
                    alt="Instagram"
                />
                <SocialsItem
                    href="https://www.linkedin.com/company/t%C3%BCbi%CC%87t/"
                    desc="TÜBİT LinkedIn sayfasını ziyaret et"
                    src={linkedinLogo}
                    alt="LinkedIn"
                />
                <SocialsItem
                    href="https://www.youtube.com/@kycubyo_tubit"
                    desc="TÜBİT Youtube sayfasını ziyaret et"
                    src={youtubeLogo}
                    alt="Youtube"
                />
            </div>
        </div>
        <div class="flex items-center mt-5 justify-evenly mx-9">
            <a
                href="https://tubit.trakya.edu.tr"
                target="_blank"
                rel="noopener noreferrer"
                title="TUBİT"
            >
                <Image
                    class="w-[116px] h-[66px] m-5"
                    src={tubitLogo}
                    alt="TÜBİT"
                />
            </a>
            <div class="w-px bg-white h-9"></div>
            <a
                href="https://www.trakya.edu.tr/"
                target="_blank"
                rel="noopener noreferrer"
                title="Trakya Üniversitesi"
            >
                <Image
                    class="w-[100px] h-[100px] m-5"
                    src={trakyaLogo}
                    alt="Trakya Üniversitesi"
                />
            </a>
        </div>
    </div>
    <p class="mt-10 text-center">Tüm Hakları Saklıdır. ©TÜBİT 2024</p>
    <p class="mt-1 text-center">Made by <a class="underline transition-all hover:text-blue-600" href="https://github.com/roket1428">Mehmet Elber Orhan</a></p>
</footer>
